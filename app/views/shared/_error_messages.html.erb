<% if object.errors.any? %>
	<div class="notification-box red-box">
	        <h4>Attention</h4>
	        <a href="#" class="close-notification">x</a>
	    <div class="clear"></div>
	    <ul>
			<% object.errors.full_messages.each do |msg| %>
				<li>* <%= msg %></li>
			<% end %>
		</ul> 
	</div>
<% end %>