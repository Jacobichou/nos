$("#approve_link_<%= @project_summary_form.id %>").html("<%= approve_link_text(@project_summary_form) %>")
$("#item_<%=@project_summary_form.title.downcase.tr(" ", "_") %>_<%=@project_summary_form.id %>").html()

if ( <%= @project_summary_form.approved? %> ) {
	$("#item_<%=@project_summary_form.title.downcase.tr(" ", "_") %>_<%=@project_summary_form.id %>").removeClass("approved-item").addClass("un-approved-item")
	$("#approve_link_<%= @project_summary_form.id %>").removeClass("un-approved-item").addClass("approved-item")
	$("#approve_link_<%= @project_summary_form.id %>").removeClass("no-bottom demo-button button green").addClass("no-bottom demo-button button red")
}
else {
	$("#item_<%=@project_summary_form.title.downcase.tr(" ", "_") %>_<%=@project_summary_form.id %>").removeClass("un-approved-item").addClass("approved-item")
	$("#approve_link_<%= @project_summary_form.id %>").removeClass("approved-item").addClass("un-approved-item")
	$("#approve_link_<%= @project_summary_form.id %>").removeClass("no-bottom demo-button button red").addClass("no-bottom demo-button button green")
}
