<div class="container">
	<h1>Editing Full Summary</h1>
	<h3><%= @project_summary_form.title.titlecase %></h3>	
</div>

<!-- <= render 'full_summary_form' %> -->

<%= form_for(@project_summary_form) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<fieldset>

	<div class="row-fluid">
		<div class="span12">
			<!-- <= f.label :purpose, "Purpose of event:", class:"span12" %> -->
			<%= f.text_area :facilities, placeholder: "facilities", class:"span12" %>

			<!-- <= f.label :audience, "Target audience:", class:"span12" %> -->
			<%= f.text_field :comm, placeholder: "comm", class:"span12" %>

			<!-- <= f.label :outcome, "Expected outcome:", class:"span12" %> -->
			<%= f.text_field :worship_council, placeholder: "worship_council", class:"span12" %>
		</div>
	</div>

	<hr>

	<div class="actions center">
		<%= f.submit 'Submit', class:"btn btn-large btn-primary btn-block" %>
	</div>
</fieldset>

<% end %>

<hr>
<%= link_to 'Show', @project_summary_form, class: "btn btn-large btn-info btn-block" %>
<%= link_to 'Back', home_path, class: "btn btn-large btn-block" %>
