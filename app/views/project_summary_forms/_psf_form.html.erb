<%= form_for(@project_summary_form) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<fieldset>
  <div class="row-fluid">
    <div class="span12">
      <label class="radio inline">
        <%= f.radio_button :type, "Van Request" %>
        Van Request
      </label>
      <label class="radio inline">
        <%= f.radio_button :type, "Facility/Meeting Request" %>
        Facility/Meeting Request
      </label>
      <label class="radio inline">
        <%= f.radio_button :type, "Event/Project" %>
        Event/Project
      </label>
    </div>
  </div>

  <hr>

  <div class="row-fluid">
    <div class="span12">
      <!-- <= f.label :title, "Event Title:", class:"span12" %> -->
      <%= f.text_field :title, placeholder: "Event Title", class:"span12" %>

      <!-- <= f.label :location, "Location:", class:"span12" %> -->
      <%= f.text_field :location, placeholder: "Location", class:"span12" %>
    </div>
  </div>
  <!-- add ajax person finder box -->

  <hr>

  <div class="row-fluid">
    <div class="span6">
      <%= f.label :start_time, "Start time", class:"span12" %>
      <%= f.time_field :start_time %>
    </div>

    <div class="span6">
      <%= f.label :end_time, "End time", class:"span12" %>
      <%= f.time_field :end_time %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6">
      <%= f.label :start_date, "Start date", class:"span12" %>
      <%= f.date_field :start_date %>
    </div>

    <div class="span6">
      <%= f.label :end_date, "End day", class:"span12" %>
      <%= f.date_field :end_date %>
    </div>
  </div>

  <hr>

  <div class="row-fluid">
    <div class="span12">
      <!-- <= f.label :frequency, "Indicate if recurring event by giving the frequency (e.g. Each Sunday after 8pm):", class:"span12" %> -->
      <%= f.text_field :frequency, placeholder: "Indicate if recurring event by giving the frequency (e.g. Each Sunday after 8pm)", class:"span12" %>

      <!-- <= f.label :frequency_exception, "Indicate exception for recurring event (e.g. the date during Thanksgiving week):", class:"span12" %> -->
      <%= f.text_field :frequency_exception, placeholder: "Indicate exception for recurring event (e.g. the date during Thanksgiving week)", class:"span12" %>
    </div>
  </div>

  <hr>

  <div class="row-fluid">
    <div class="span12">
      <!-- <= f.label :purpose, "Purpose of event:", class:"span12" %> -->
      <%= f.text_area :purpose, placeholder: "Purpose of event", class:"span12" %>

      <!-- <= f.label :audience, "Target audience:", class:"span12" %> -->
      <%= f.text_field :audience, placeholder: "Target audience", class:"span12" %>

      <!-- <= f.label :outcome, "Expected outcome:", class:"span12" %> -->
      <%= f.text_field :outcome, placeholder: "Expected outcome", class:"span12" %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="input-prepend input-append">
        <span class="add-on">$</span>
        <%= f.number_field :budget, placeholder: "Budget (To nearest dollar)", class:"span12" %>
        <span class="add-on">.00</span>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="input-prepend input-append">
        <span class="add-on">$</span>
        <%= f.number_field :revenue, placeholder: "Estimated revenue (To nearest dollar)", class:"span12" %>
        <span class="add-on">.00</span>
      </div>
    </div>
  </div>

  <hr>

  <div class="row-fluid">
    <div class="span12">
      <div class="input-prepend input-append">
        <span class="add-on">$</span>
        <%= f.number_field :fee, placeholder: "Event fee", class:"span12" %>
        <span class="add-on">.00</span>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      Will there be an offering? <br>
      <label class="radio inline">
        <%= f.radio_button :offering, "true" %>
        Yes
      </label>
      <label class="radio inline">
        <%= f.radio_button :offering, "false" %>
        No
      </label>
    </div>
  </div>

  <hr>

  <div class="actions center">
    <%= f.submit 'Submit', class:"btn btn-large btn-primary btn-block" %>
  </div>
</fieldset>
<% end %>


