<%= form_for(@project_summary_form) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

  <fieldset>
    <div class="column">
      <div class="one-third">
        <div class="formFieldWrap">
          <%= f.radio_button :type, "Van Request", class:"checker radio-v1" %>
        </div>
      </div>
      <div class="one-third">
        <%= f.radio_button :type, "Facility/Meeting Request", class:"checker radio-v1" %>
      </div>
      <div class="one-third">
        <%= f.radio_button :type, "Event/Project", class:"checker radio-v1" %>
      </div>
    </div>

    <div class="decoration"></div>

    <div class="container">
      <div class="formFieldWrap">
        <!-- <= f.label :title, "Event Title:", class:"field-title" %> -->
        <%= f.text_field :title, placeholder: "Event Title", class:"contactField" %>
      </div>

      <div class="formFieldWrap">
        <!-- <= f.label :location, "Location:", class:"field-title" %> -->
        <%= f.text_field :location, placeholder: "Location", class:"contactField" %>
      </div>

  <!-- add ajax person finder box -->

    <div class="decoration"></div>


    <div class="column">
      <div class="one-half">
        <div class="formFieldWrap">
          <%= f.label :start_time, "Start time", class:"field-title" %>
          <%= f.time_field :start_time %>
        </div>
      </div>

      <div class="one-half">
        <div class="formFieldWrap">
          <%= f.label :end_time, "End time", class:"field-title" %>
          <%= f.time_field :end_time %>
        </div>
      </div>
    </div>

    <div class="column">
      <div class="one-half">
        <div class="formFieldWrap">
          <%= f.label :start_date, "Start date", class:"field-title" %>
          <%= f.date_field :start_date %>
        </div>
      </div>

      <div class="one-half">
        <div class="formFieldWrap">
          <%= f.label :end_date, "End day", class:"field-title" %>
          <%= f.date_field :end_date %>
        </div>
      </div>
    </div>

    <div class="decoration"></div>

    <div class="container">
      <div class="formFieldWrap">
        <!-- <= f.label :frequency, "Indicate if recurring event by giving the frequency (e.g. Each Sunday after 8pm):", class:"field-title" %> -->
        <%= f.text_field :frequency, placeholder: "Indicate if recurring event by giving the frequency (e.g. Each Sunday after 8pm)", class:"contactField" %>
      </div>

      <div class="formFieldWrap">
        <!-- <= f.label :frequency_exception, "Indicate exception for recurring event (e.g. the date during Thanksgiving week):", class:"field-title" %> -->
        <%= f.text_field :frequency_exception, placeholder: "Indicate exception for recurring event (e.g. the date during Thanksgiving week)", class:"contactField" %>
      </div>
    </div>

    <div class="decoration"></div>

    <div class="container">
      <div class="formFieldWrap">
        <!-- <= f.label :purpose, "Purpose of event:", class:"field-title" %> -->
        <%= f.text_area :purpose, placeholder: "Purpose of event", class:"contactTextarea" %>
      </div>

      <div class="formFieldWrap">
        <!-- <= f.label :audience, "Target audience:", class:"field-title" %> -->
        <%= f.text_field :audience, placeholder: "Target audience", class:"contactField" %>
      </div>

      <div class="formFieldWrap">
        <!-- <= f.label :outcome, "Expected outcome:", class:"field-title" %> -->
        <%= f.text_field :outcome, placeholder: "Expected outcome", class:"contactField" %>
      </div>

      <div class="formFieldWrap">
        <!-- <= f.label :budget, "Budget:", class:"field-title" %> -->
        <%= f.number_field :budget, placeholder: "Budget", class:"contactField" %>
      </div>

      <div class="formFieldWrap">
        <!-- <= f.label :revenue, "Estimated revenue:", class:"field-title" %> -->
        <%= f.number_field :revenue, placeholder: "Estimated revenue", class:"contactField" %>
      </div>
    </div>

    <div class="decoration"></div>

    <div class="container">
      <div class="formFieldWrap">
        <!-- <= f.label :fee, "Event fee:", class:"field-title" %> -->
        <%= f.number_field :fee, placeholder: "Event fee -- Do not use dollar sign", class:"contactField" %>
      </div>

      <div class="formFieldWrap">
        <!-- <= f.label :offering, "Will there be an offering?:", class:"field-title" %> -->
        <%= f.radio_button :offering, "Yes", class:"radio-v1" %>
        <%= f.radio_button :offering, "No", class:"checker radio-v1" %>
      </div>
    </div>

    <div class="decoration"></div>

    <div class="actions center">
      <%= f.submit 'Submit', class:"buttonWrap button-minimal grey-minimal" %>
    </div>
  </fieldset>
<% end %>


